{
  "name": "ctp",
  "version": "1.0.0",
  "private": true,
  "description": "ConveniencePro Tool Protocol (CTP) - Open specification for browser-native developer tools",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:packages": "npm run build --workspace=packages/ctp-core --workspace=packages/ctp-runtime --workspace=packages/ctp-discovery --workspace=packages/ctp-sdk --workspace=packages/ctp-spec --workspace=packages/ctp-examples",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "publish:all": "npm publish --workspaces --access public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/titan-alpha/ctp.git"
  },
  "keywords": [
    "conveniencepro",
    "ctp",
    "tool-protocol",
    "browser-tools",
    "mcp",
    "llm-tools"
  ],
  "author": "ConveniencePro",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
