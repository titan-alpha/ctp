{
  "name": "@conveniencepro/ctp-spec",
  "version": "1.0.0",
  "description": "ConveniencePro Tool Protocol (CTP) Specification",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schemas/*": "./schemas/*",
    "./spec": "./SPEC.md"
  },
  "files": [
    "dist",
    "schemas",
    "SPEC.md",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "validate": "ajv compile -s schemas/*.json"
  },
  "keywords": [
    "ctp",
    "conveniencepro",
    "tool-protocol",
    "specification",
    "json-schema"
  ],
  "author": "ConveniencePro",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.3.0",
    "ajv": "^8.12.0"
  }
}
