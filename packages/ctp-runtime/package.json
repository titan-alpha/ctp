{
  "name": "@conveniencepro/ctp-runtime",
  "version": "1.0.0",
  "description": "Dual execution runtime (browser & Node.js) for the ConveniencePro Tool Protocol",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./client": {
      "import": "./dist/client.mjs",
      "require": "./dist/client.js",
      "types": "./dist/client.d.ts"
    },
    "./server": {
      "import": "./dist/server.mjs",
      "require": "./dist/server.js",
      "types": "./dist/server.d.ts"
    },
    "./registry": {
      "import": "./dist/registry.mjs",
      "require": "./dist/registry.js",
      "types": "./dist/registry.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/client.ts src/server.ts src/registry.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts src/client.ts src/server.ts src/registry.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "ctp",
    "conveniencepro",
    "runtime",
    "browser",
    "nodejs",
    "tool-execution",
    "llm-tools"
  ],
  "author": "ConveniencePro",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/titan-alpha/ctp.git",
    "directory": "packages/ctp-runtime"
  },
  "homepage": "https://spec.conveniencepro.cc",
  "bugs": {
    "url": "https://github.com/titan-alpha/ctp/issues"
  },
  "dependencies": {
    "@conveniencepro/ctp-core": "^1.0.0"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
